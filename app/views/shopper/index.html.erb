<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<div class="shopper">
  <h1>Products Catalog</h1>
  click picture to see the details of the individual item
  <% @products.each do |product| %>
    <div class="entry" >

      <%= link_to image_tag(product.image),detail_path(product)%>
      <h3><%= product.name %></h3>
      <p><%= sanitize(product.description) %></p>
      <div class="price_line">
        <span class="price"><%= product.price %></span>
      </div>

      <%= button_to "Add to Cart", lineitems_path(product_id: product), class: "add_to_cart" ,remote: true%><br>
    </div>
  <% end %>
</div>
